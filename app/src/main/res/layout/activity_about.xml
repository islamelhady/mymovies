<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/ten_dp_dimen">

            <ImageView
                android:layout_width="@dimen/one_fourty_dp_dimen"
                android:layout_height="@dimen/one_fourty_dp_dimen"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_filme" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_20_sp"
                android:text="@string/app_name"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dimen_30_sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_version" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten_dp_dimen"
            android:layout_marginTop="@dimen/five_dp_dimen"
            android:layout_marginRight="@dimen/ten_dp_dimen"
            android:layout_marginBottom="@dimen/five_dp_dimen"
            app:cardElevation="@dimen/two_dp_dimen">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="@dimen/sixteen_dp_dimen">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_star" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_review_title"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sixteen_dp_dimen" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/six_dp_dimen"
                        android:text="@string/app_review_description"
                        android:textColor="@color/grey_600" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten_dp_dimen"
            android:layout_marginTop="@dimen/five_dp_dimen"
            android:layout_marginRight="@dimen/ten_dp_dimen"
            android:layout_marginBottom="@dimen/five_dp_dimen"
            app:cardElevation="@dimen/two_dp_dimen">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="@dimen/sixteen_dp_dimen">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_mail" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_feedback_title"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sixteen_dp_dimen" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/six_dp_dimen"
                        android:text="@string/app_feedback_description"
                        android:textColor="@color/grey_600" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten_dp_dimen"
            android:layout_marginTop="@dimen/five_dp_dimen"
            android:layout_marginRight="@dimen/ten_dp_dimen"
            android:layout_marginBottom="@dimen/five_dp_dimen"
            app:cardElevation="@dimen/two_dp_dimen">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="@dimen/sixteen_dp_dimen">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_person" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_developer_title"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sixteen_dp_dimen" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/six_dp_dimen"
                        android:text="@string/app_developer_description"
                        android:textColor="@color/grey_600" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten_dp_dimen"
            android:layout_marginTop="@dimen/five_dp_dimen"
            android:layout_marginRight="@dimen/ten_dp_dimen"
            android:layout_marginBottom="@dimen/five_dp_dimen"
            app:cardElevation="@dimen/two_dp_dimen">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="@dimen/sixteen_dp_dimen">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_tmdb" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_tmdb_title"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sixteen_dp_dimen" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/six_dp_dimen"
                        android:text="@string/app_tmdb_description"
                        android:textColor="@color/grey_600" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten_dp_dimen"
            android:layout_marginTop="@dimen/five_dp_dimen"
            android:layout_marginRight="@dimen/ten_dp_dimen"
            android:layout_marginBottom="@dimen/five_dp_dimen"
            app:cardElevation="@dimen/two_dp_dimen">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="@dimen/sixteen_dp_dimen">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_copyright" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_copyright_title"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sixteen_dp_dimen" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/six_dp_dimen"
                        android:text="@string/app_copyright_description"
                        android:textColor="@color/grey_600" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>
